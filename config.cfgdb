{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "store": true,
  "properties": {
    "clock": {
      "type": "object",
      "store": true,
      "properties": {
        "animation": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "required": [
            "name"
          ],
          "oneOf": [
            {
              "title": "Static",
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "const": "static",
                  "default": "static"
                },
                "color": {
                  "type": "string",
                  "default": "#ff0000"
                }
              }
            }
          ]
        }
      }
    },
    "settings": {
      "type": "object",
      "store": true,
      "properties": {
        "brightness": {
          "type": "integer",
          "default": 255,
          "minimum": 0,
          "maximum": 255
        },
        "timezone": {
          "type": "string",
          "default": "Europe/Berlin",
          "maxLength": 64
        }
      }
    }
  }
}
